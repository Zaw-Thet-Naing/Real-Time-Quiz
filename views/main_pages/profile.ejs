<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Time Quiz</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="icon" href="icon.png" />
    <link rel="stylesheet" href="/form/assets/css/form.css" />
  </head>
  <body>
    <div class="wrapper">
      <a href="/"
        ><img src="icon.png" alt="" style="margin-right: 12px" />Let's QUIZZ</a
      >
      <form action="/profile" method="post">
        <h1>Your Profile</h1>
        <div class="mb-3 form-group">
            <label for="name">Name</label>
          <input
            required
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Name"
            <% if (data) { %>
                value="<%= data.name %>" 
            <% } %> 
            /> 
            <% if (errors) { %> 
                <% errors.forEach(function(error) { %> 
                    <% if (error.path === "name") { %>
                        <p class="error text-danger"><%= error.msg %></p>
                    <% } %> 
                <% }) %> 
            <% } %>
        </div>
        <div class="mb-3 form-group">
            <label for="mail">Email</label>
          <input
            required
            type="email"
            class="form-control"
            id="mail"
            name="mail"
            aria-describedby="emailHelp"
            placeholder="Email"
            <% if (data) { %>
                value="<%= data.mail %>" 
            <% } %> 
            /> 
            <% if (errors) { %> 
                <% errors.forEach(function(error) { %> 
                    <% if (error.path === "mail") { %>
                        <p class="error text-danger"><%= error.msg %></p>
                    <% } %> 
                <% }) %> 
            <% } %>
        </div>
        <div class="mb-3 form-group btn-group">
            <input
                type="submit"
                class="btn btn-primary"
                name="update"
                value="Update"
                />
            <input
                type="button"
                class="btn btn-danger logout"
                name="logout"
                value="Logout"
                />
        </div>
      </form>
    </div>
    <script src="/form/assets/js/form.js"></script>
  </body>
</html>
